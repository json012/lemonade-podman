[Unit]
Description=LiteLLM Postgres DB
Wants=litellm-db.network
After=litellm-db.network

[Container]
Image=docker.io/postgres:17-trixie
ContainerName=litellm-db

EnvironmentFile=%h/.config/containers/systemd/conf/litellm-db.env

# Network configuration
Network=litellm-db.network

# Data persistence
Volume=litellm-db.volume:/var/lib/postgresql/data:Z

[Service]
Restart=always
RestartSec=10

[Install]
WantedBy=default.target

